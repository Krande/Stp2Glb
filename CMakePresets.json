{
  "version": 6,
  "configurePresets": [
    {
      "name": "win-local",
      "generator": "Ninja",
      "hidden": false,
      "environment": {
        "PREFIX": "${sourceDir}/.pixi/envs/default",
        "LIBRARY_PREFIX": "${sourceDir}/.pixi/envs/default/Library"
      },
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_PREFIX_PATH": "$env{LIBRARY_PREFIX};$env{LIBRARY_PREFIX}/include;$env{LIBRARY_PREFIX}/lib;$env{LIBRARY_PREFIX}/bin",
        "CMAKE_INSTALL_PREFIX": "$env{LIBRARY_PREFIX}",
        "CGAL_DIR": "$env{LIBRARY_PREFIX}/lib/cmake/CGAL",
        "OpenCASCADE_DIR": "$env{LIBRARY_PREFIX}/lib/cmake/opencascade",
        "OpenCASCADE_INCLUDE_DIR": "$env{LIBRARY_PREFIX}/include/opencascade",
        "STEPCODE_INCLUDE_DIR": "$env{LIBRARY_PREFIX}/include/stepcode",
        "BUILD_TESTING": "ON",
        "CONDA_LOCAL_DEV": "ON"
      }
    },
    {
      "name": "win-local-release",
      "inherits": "win-local",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTING": "ON"
      }
    },
    {
      "name": "win-local-static",
      "inherits": "win-local",
      "environment": {
        "PREFIX": "${sourceDir}/.pixi/envs/static",
        "LIBRARY_PREFIX": "${sourceDir}/.pixi/envs/static/Library"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INCLUDE_PATH": "$env{LIBRARY_PREFIX}/include",
        "CMAKE_PREFIX_PATH": "$env{LIBRARY_PREFIX};$env{LIBRARY_PREFIX}/include;$env{LIBRARY_PREFIX}/lib;$env{LIBRARY_PREFIX}/bin",
        "CMAKE_INSTALL_PREFIX": "$env{LIBRARY_PREFIX}",
        "BUILD_TESTING": "OFF",
        "BUILD_STATIC": "ON",
        "BUILD_SHARED_LIBS": "OFF",
        "CONDA_LOCAL_DEV": "OFF"
      }
    }
  ]
}